{% include '/shared/start.html.twig' %}


<div class="section-wrapper mg-t-20">
    <label class="section-title">Listado de blog contents</label>
    <div class="row">
        <div class="col-lg-12 mg-t-20 mg-lg-t-0">
            <div class="list-group list-group-striped list-group-user">

                {% for blogcontent in blogcontents %}
                <div class="list-group-item">
                    <div class="user-name-address">
                        <h6 class="text-primary">posicion {{ blogcontent.position }}</h6>
                        {% if blogcontent.html is not null %}
                            <span>{{ blogcontent.html[:1000] ~ '...' }}</span>
                        {% endif %}

                        {% if blogcontent.youtube is not null %}
                            <span>{{ blogcontent.youtube }}</span>
                        {% endif %}
                    </div>      
                    {% if blogcontent.image is not null %}
                    <img class="media-img" src="{{ blogcontent.image }}" alt="Image">          
                    {% endif %}
                    <div class="user-btn-wrapper">
                      <a href="#" class="btn btn-outline-primary btn-icon">
                        <div class="tx-20"><i class="icon fa fa-eye"></i></div>
                      </a>
                    </div>                
                </div>
                {% endfor %}

            </div>
        </div>
    </div>
</div>


<div class="section-wrapper mg-t-20">
    <label class="section-title">Que podemos hacer?</label>
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="btn-demo">
                <a href="{{ path('content_blogcontent_create',{blogpost_id: blogpost_id}) }}" class="btn btn-primary btn-block mg-b-10"><i class="fa fa-plus mg-r-5"></i> Nuevo Content</a>
            </div>
            <div class="btn-demo">
                <a href="{{ path('content_blogpost_index') }}" class="btn btn-secondary btn-block mg-b-10"><i class="fa fa-fast-backward mg-r-5"></i> Volver al listado</a>
            </div>
        </div>
    </div>
</div>


{% include '/shared/end.html.twig' %}
